{
  "$schema": "../../../node_modules/ng-packagr/ng-package.schema.json",
  "allowedNonPeerDependencies": [
    "@angular",
    "@ta",
    "@types",
    "luxon",
    "ngx-material-timepicker",
    "@editorjs",
    "codex-notifier",
    "codex-tooltip",
    "libphonenumber-js",
    "intl-tel-input",
    "angular-star-rating",
    "css-star-rating"
  ],
  "assets": [
    {
      "glob": "**/*.json",
      "input": "src/i18n",
      "output": "i18n"
    }
  ],
  "dest": "dist",

  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["../../styles/src/style"]
  }
}
