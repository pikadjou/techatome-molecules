{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "dist",

  "lib": {
    "entryFile": "src/public-api.ts",
    "styleIncludePaths": ["../styles/src/style"]
  },
  "allowedNonPeerDependencies": ["@angular", "@ta"],
