{
  "tasks": [
    {
      "label": "Claude YOLO console",
      "type": "shell",
      "command": "claude", // ou "claude-code" si c'est le nom exact
      "args": ["--dangerously-skip-permissions"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "new" // nouveau terminal à chaque fois, pour éviter conflits
      },
      "group": {
        "kind": "build",
        "isDefault": true // Ctrl+Shift+B pour lancer direct
      }
    }
  ],
  "version": "2.0.0"
}
